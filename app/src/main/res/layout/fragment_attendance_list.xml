<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.attaurrahman.attendanceapp.fragment.AttendanceListFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/hedercolor"
        android:gravity="center"
        android:text="All Attendance"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title_color"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.30"
            android:textStyle="bold"
            android:baselineAligned="false"
            android:text="Total Classes"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_classes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.50"
            android:baselineAligned="false"
            android:text="classes"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="@color/darkblue" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.90"
            android:baselineAligned="false"
            android:text="Absent"
            android:textStyle="bold"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/tv_absent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.50"
            android:baselineAligned="false"
            android:text="Absent"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#ff00" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.90"
            android:baselineAligned="false"
            android:text="Present"
            android:textStyle="bold"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_present"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:baselineAligned="false"
            android:text="Present"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#80e966" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        />
    <LinearLayout
        android:id="@+id/ll_title_attendance"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/title_color"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:baselineAligned="false"
            android:textSize="12dp"
            android:text="Date" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:baselineAligned="false"
            android:text="Name"
            android:textSize="12dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.10"
            android:baselineAligned="false"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Class"
            android:textSize="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.10"
            android:baselineAligned="false"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Attendance"
            android:textSize="12dp"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_all_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"></android.support.v7.widget.RecyclerView>

</LinearLayout>
