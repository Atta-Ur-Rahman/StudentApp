<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.attaurrahman.attendanceapp.fragment.StudentAllRecordFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/edith_text_height"
            android:text="All Student Record"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/hedercolor" />

        <ImageView
            android:id="@+id/ivAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/add"
            android:layout_marginTop="@dimen/margin_top_edithtext"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            />

    </FrameLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_student_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
